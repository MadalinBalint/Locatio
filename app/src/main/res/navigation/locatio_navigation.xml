<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/catpedia_navigation"
    app:startDestination="@id/locationsFragment">

    <fragment
        android:id="@+id/locationsFragment"
        android:name="com.mendelin.locatio.locations_list.ui.LocationsListFragment"
        android:label="LocationsListFragment"
        tools:layout="@layout/fragment_locations_list">

        <action
            android:id="@+id/action_location_info"
            app:destination="@id/locationInfoFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit" />

    </fragment>

    <fragment
        android:id="@+id/locationInfoFragment"
        android:name="com.mendelin.locatio.location_info.ui.LocationInfoFragment"
        android:label="LocationInfoFragment"
        tools:layout="@layout/fragment_location_info">

        <argument
            android:name="location"
            app:argType="com.mendelin.locatio.models.LocationInfoObject"
            app:nullable="true" />

    </fragment>

</navigation>